  <style>
    .container {
      background: #fff;
    }
    body {
      background: linear-gradient(to bottom, #FFC2C2, #AED5FF); /* Gradiente vertical */
      background-attachment: fixed; /* O gradiente ficará fixo enquanto o conteúdo rola */
      height: 100vh;
      margin: 0;
    }

    @media screen and (max-width: 768px) {
      .container {
        margin-top: 10px;
        width: 90%;
      }
    }

    .password-container {
      display: flex;
      align-items: center;
    }

    .eye-icon {
      cursor: pointer;
      margin-left: 10px;
    }
  </style>
  <body>
    <div class="container">
      <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
      </div>
      <h3 class="text-center">Meu Sitio</h3>
      <img src="/" alt="img" class="text-center p-2" />

      <!-- Seção com as informações do perfil -->
      <div class="profile-info p-4 mt-4">
        <div class="mt-4">
          <p><strong>Nome do Sitio</strong> <span id="sitio-nome">Criadouro de Camarões</span></p>
          <p><strong>Cidade</strong> <span id="sitio-email">Cananéia</span></p>
          <p><strong>Bairro</strong> <span id="sitio-bairro">Ariri</span></p>
          <p><strong>Rua</strong> <span id="sitio-rua">Rua Evaristo Xavier</span></p>
          <p><strong>Número</strong> <span id="sitio-numero">335</span></p>
          <!-- Senha com opção de visibilidade -->
        </div>
      </div>

      <!-- Nav bottom -->
      <%- include('partials/nav_bottom_sem') %>
    </div>

    
  </body>
