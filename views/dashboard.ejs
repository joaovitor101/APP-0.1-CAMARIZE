  <body>
    <style>
      /* Estilo para os itens da grid */
      .grid-item {
          display: flex;
          align-items: center; /* Centraliza verticalmente o conteúdo (imagem e texto) */
          justify-content: flex-start; /* Alinha o conteúdo à esquerda */
          padding-left: 10px; /* Ajuste para mover os itens para a esquerda */
          width: 100%; /* Garantir que o item ocupe toda a largura disponível */
          max-width: 100%; /* Limita a largura máxima dos itens para a largura total da tela */
          height: 120px; /* Define uma altura retangular (ajustável) */
          margin-bottom: 15px; /* Espaçamento entre os itens */
          border-radius: 8px; /* Bordas arredondadas (opcional) */
          overflow: hidden; /* Impede que o conteúdo ultrapasse os limites */
          text-align: left; /* Alinha o texto à esquerda */
      }
  
      /* Estilo para o conteúdo dentro do grid-item */
      .grid-item .content {
          display: flex;
          align-items: center; /* Centraliza verticalmente o ícone e o texto */
          justify-content: flex-start; /* Alinha o ícone à esquerda, com o texto ao lado */
          gap: 2px; /* Espaçamento entre o ícone e o texto */
          flex-grow: 1; /* Permite que o conteúdo ocupe o máximo de espaço possível */
      }
  
      /* Estilo para descrição e valor do item */
      .grid-item .description,
      .grid-item .value {
          white-space: normal; /* Permite que o texto quebre em várias linhas */
          overflow: hidden; /* Impede que o texto ultrapasse o limite do item */
          text-overflow: ellipsis; /* Adiciona "..." se o texto for muito longo */
          word-wrap: break-word; /* Permite que o texto seja quebrado automaticamente */
          display: flex; /* Faz o texto se comportar como um bloco */
          align-items: center; /* Centraliza verticalmente o texto dentro da célula */
      }
  
      /* Estilo para o ícone */
      .grid-item .icon {
          width: 35px; /* Define a largura do ícone */
          height: 35px; /* Define a altura do ícone */
      }
  
      /* Estilo para a descrição */
      .description {
          font-size: 12px;
          font-weight: bold;
      }
  
      /* Estilo para o valor */
      .value {
          font-size: 1rem;
      }
  
      /* Estilo para o contêiner da grid */
      .grid-container {
          display: grid;
          grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); /* Ajusta as colunas para largura mínima de 300px */
          gap: 15px; /* Espaçamento entre os itens */
          width: 100vw; /* A largura do grid ocupará 100% da largura da tela */
          margin: 0 auto; /* Centraliza o grid */
          padding: 10px; /* Ajuste de espaçamento interno */
          box-sizing: border-box; /* Garante que o padding seja calculado no tamanho total */
      }
  
      /* Ajustes para telas menores */
      @media (max-width: 768px) {
          .grid-container {
              grid-template-columns: 1fr; /* Exibe apenas uma coluna em telas menores */
          }
      }
  </style>
  
  
