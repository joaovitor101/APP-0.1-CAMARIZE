<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="css/dashboard_ejs.css">
    <script
    src="https://cdn.jsdelivr.net/npm/chart.js"
    integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMPj1B7F+IC2RC3ZrW/9f3JW5c5y00PYkN6Bf3"
    crossorigin="anonymous"
  ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMPj1B7F+IC2RC3ZrW/9f3JW5c5y00PYkN6Bf3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/tanque_ejs.css" />
    <title>Document</title>
  </head>

  <body>
    <div class="p-1">
    </div>
    <div class="container">
      <img class="mt-3" id="imagem_logo" src="./imgs/logo_camarize.png" alt="">
        <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">

        </div>
        
      
      <table>
        <div class="grid-container mt-4">
          <div class="grid-item selecionado">
            <div class="content d-flex align-items-center">
              <img src="./imgs/Sol.png" alt="icone_temp" class="icon">
              <span class="value">27°</span>
            </div>
            <div class="description">Temperatura</div>
          </div>
        
          <div class="grid-item">
            <div class="content d-flex align-items-center">
              <img src="./imgs/ph.png" alt="icone_temp" class="icon">
              <span class="value">7.5</span>
            </div>
            <div class="description">Nível de pH</div>
          </div>
        
          <div class="grid-item">
            <div class="content d-flex align-items-center">
              <img src="./imgs/amonia.png" alt="icone_temp" class="icon">
              <span class="value">0,05 mg/L</span>
            </div>
            <div class="description">Amônia Ionizada</div>
          </div>
        
          <div class="grid-item">
            <div class="content d-flex align-items-center">
              <img src="./imgs/amonia.png" alt="icone_temp" class="icon">
              <span class="value">0,05 mg/L</span>
            </div>
            <div class="description">Amônia Não Ionizada</div>
          </div>
        </div>
        <hr>
          <p style="font-size: 20px;" class="p-2">Ultimos Dias - Nome aqui</p>
         
          <div class="chart-container p-3" style="width: 100%; max-width: 800px; margin: auto;">
            <canvas id="weeklyChart"></canvas> 
          </div>
          <div style="font-size: 20px;" class="rel">Relatorio Individual Detalhado</div>
      </table>
      <%- include('partials/nav_bottom') %>
    </div>




    <script>
      // Pegue o contexto do canvas
      const ctx = document.getElementById('weeklyChart').getContext('2d');
    
      // Dados do gráfico
      const data = {
        labels: ['Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb', 'Dom'], // Dias da semana
        datasets: [
          {
            label: 'Temperatura',
            data: [25, 27, 26, 28, 29, 30, 28],
            borderColor: 'rgba(255, 99, 132, 1)',
            backgroundColor: 'rgba(255, 99, 132, 0.2)',
            borderWidth: 2,
            tension: 0.4,
          },
          {
            label: 'pH',
            data: [7.2, 7.5, 7.3, 7.4, 7.6, 7.8, 7.5],
            borderColor: 'rgba(54, 162, 235, 1)',
            backgroundColor: 'rgba(54, 162, 235, 0.2)',
            borderWidth: 2,
            tension: 0.4,
          },
          {
            label: 'Amônia',
            data: [0.02, 0.03, 0.05, 0.04, 0.03, 0.06, 0.05],
            borderColor: 'rgba(75, 192, 192, 1)',
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            borderWidth: 2,
            tension: 0.4,
          },
        ],
      };
    
      // Configuração do gráfico
      const config = {
        type: 'line',
        data: data,
        options: {
          responsive: true,
          plugins: {
            legend: {
              position: 'top',
            },
            title: {
              display: true,
              text: 'Dados Semanais',
            },
          },
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      };
    
      // Renderize o gráfico
      const weeklyChart = new Chart(ctx, config);
    </script>
    
  </body>
</html>
