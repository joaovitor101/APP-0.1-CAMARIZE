<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/login_ejs.css">
    <title>Document</title>
</head>
<body>
    <% if(successMessage.length) { %>
        <div id="flash-message" class="alert alert-success">
            <%= successMessage[0] %>
        </div>
    <% } else if(errorMessage.length) { %>
        <div id="flash-message" class="alert alert-danger">
            <%= errorMessage[0] %>
        </div>
    <% } %>

    <div class="form-container">
        <h2 class="text-left text-2xl font-bold p-2">Conecte-se para continuar</h2>
        <hr class="gradient-hr mb-4">
    <form action="/authenticate" method="post">

    <input type="email" id="email" name="email" placeholder="Email" class="form-control" required>
    <input type="password" id="senha" name="senha" placeholder="Senha" class="form-control" required>

    <button type="submit">Entrar</button>
    <hr class="gradient-hr mb-4 mt-4">
    </form>
        <p class="mt-2">Não tem uma conta? <a href="/register">Cadastre-se</a></p>
    </div>
    <img src="/imgs/camarize.png" class="w-48 mt-4" alt="">

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const flashMessage = document.getElementById("flash-message");
            if (flashMessage) {
                flashMessage.style.display = "block";  // Exibe o popup
    
                // Desaparece automaticamente após 3 segundos
                setTimeout(() => {
                    flashMessage.style.opacity = "0";  // Inicia transição para desaparecer
                    setTimeout(() => {
                        flashMessage.style.display = "none";
                    }, 500);
                }, 1500);
            }
        });
    </script>

</body>
</html>

